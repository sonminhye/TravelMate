<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<select id="showList" resultType="com.travel.mate.dto.UserDTO">
		<![CDATA[
			SELECT * FROM user
		]]>
	</select>
	<insert id="insertUser" parameterType="com.travel.mate.dto.UserDTO" useGeneratedKeys="true" keyProperty="userCode">
		<![CDATA[
			INSERT INTO 
				user(id, password, authority)
			VALUES
				(#{id}, #{password}, #{authority})
		]]>
	</insert>
	<insert id="insertUserDetail" parameterType="com.travel.mate.dto.UserDetailDTO">
		<![CDATA[
			INSERT INTO 
				userdetail(userCode, name, age, sex, location)
			VALUES
				(#{userCode}, #{name}, #{age}, #{sex}, #{location})
		]]>
	</insert>

	<select id="showDetailList" resultType="com.travel.mate.dto.UserDetailDTO" parameterType="int">
		<![CDATA[
			SELECT * FROM userDetail where userCode = #{userCode}
		]]>
	</select>

	<insert id="insertLanguageList" parameterType="java.util.List">
		
			INSERT INTO 
				languagelist (userCode, ableLang)
			VALUES
			<foreach collection="list" item="item" separator=",">
				(#{item.userCode}, #{item.ableLang})
			</foreach>
		
	</insert>
	<select id="selectUserId" resultType="int">
		<![CDATA[
			SELECT count(*) 
			AS     rowcount 
			FROM   user 
			WHERE  id=#{param1}
		]]>
	</select>

</mapper>

